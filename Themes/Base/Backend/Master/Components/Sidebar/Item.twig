{% if item.visible %}
    <li class="{% if item.children %}treeview{% endif %} {% if item.name in breadcrumbsMapKeys %}active{% endif %}">
        <a href="{{ item.path ? url(item.path, item.pathNamedParams, item.pathQueryParams) : '#' }}">
            {% if item.icon %}<i class="{{ item.icon }}"></i>{% endif %}
            <span>{{ i18n(item.name) }}</span>
            {% if item.children %}
                <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
            </span>
            {% endif %}
            {#            {% set notifications = notification(item.name) %}#}
            {#            {%  if sizeof(notifications) > 0 %}#}
            {#                <span class="pull-right-container">#}
            {#                    {% for notification in notifications %}#}
            {#                        <small class="label pull-right {{ notification.type }}">{{ notification.value }}</small>#}
            {#                    {% endfor %}#}
            {#                </span>#}
            {#            {%  endif %}#}
        </a>
        {% if item.children %}
            <ul class="treeview-menu">
                {% for subitem in item.children %}
                    {% include 'Backend/Master/Components/Sidebar/Item.twig' with {'item': subitem} %}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endif %}
