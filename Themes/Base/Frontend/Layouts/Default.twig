{#
    The default theme layout.
    Every layout should extend either another layout or extend the Master.twig template.
#}
{% extends 'Frontend/Master.twig' %}

{% block body %}
    <div class="wrap wrap--has-image">
        {% block layout__header %}
            {% include 'Frontend/Components/Header/Header.twig' %}
        {% endblock layout__header %}

        {% block layout__header_image %}
            {% include 'Frontend/Components/Header/HeaderImage.twig' %}
        {% endblock layout__header_image %}

        {% block flash_messages %}
            {% include '@parent/Frontend/Components/FlashMessages.twig' %}
        {% endblock flash_messages %}

        {% block content_container %}
            {% block content_before %}
            {% endblock content_before %}
            {% block content %}
            {% endblock content %}
            {% block content_after %}
            {% endblock content_after %}
        {% endblock content_container %}

        {% block layout__footer %}
            {% include 'Frontend/Components/Footer/Footer.twig' %}
        {% endblock layout__footer %}
    </div>
{% endblock body %}
